<h1>Добавить курс</h1>

<form action="/add" method="POST">

    <div class="input-field">
        <input placeholder="Название" id="title" name="title" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название курса"></span>
    </div>

    <div class="input-field">
        <input placeholder="Цена" id="price" name="price" type="number" class="validate" required min="1">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input placeholder="картинка" id="image" name="image" type="text" class="validate" required>
        <label for="image">URL картинки</label>
        <span class="helper-text" data-error="Введите URL картинки"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Добавить курс</button>

</form>